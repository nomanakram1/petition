@{
    Layout = "_AdminLayout";
}
@model List<Petition>
<!-- BEGIN: Content-->
<div>
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
        <div class="content-body">
            <!-- Basic Vertical form layout section start -->
            <section id="basic-vertical-layouts">
                <div class="row">
                    <div class="col-md-4 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Add New Petition</h4>
                            </div>
                            <div class="card-body  ">
                                <form class="form form-vertical" method="post" asp-action="AddPetition" asp-controller="home">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label for="email-id-vertical">Petition Name</label>
                                                <input type="text" name="Petitionname" class="form-control active" placeholder="Name" required>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label for="email-id-vertical">Description</label>
                                                <textarea id="description" name="Petitiondescription" class="form-control flatpickr-basic flatpickr-input active" rows="4" cols="50" placeholder="Description" required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox">
                                                    <input class="custom-control-input" type="checkbox" name="CityPetition" id="CityPetition" tabindex="3" />
                                                    <label class="custom-control-label" for="CityPetition"> City Petition </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 pt-2">
                                            <button type="submit" class="btn btn-primary mr-1">Add New Petition</button>
                                            <button type="reset" class="btn btn-danger">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Review/Edit Petitions</h4>
                            </div>
                            <div class="card-body">
                                <div class="row" id="table-striped">
                                    <div class="col-12">
                                        <div class="card">
                                            <div class="card-body">
                                                <!-- Basic table -->
                                                <section id="basic-datatable">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="card">
                                                                <table class="datatables-basic table">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Name</th>
                                                                            <th>Description</th>
                                                                            <th>Open</th>
                                                                            <th>City Petition</th>
                                                                            <th>Action</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @if (Model.Any())
                                                                        {
                                                                            foreach (var petition in Model)
                                                                            {
                                                                                <tr>
                                                                                    <td>@petition.Petitionname</td>
                                                                                    <td>@petition.Petitiondescription</td>
                                                                                    <td>@petition.Status</td>
                                                                                    <td>@petition.CityPetition</td>
                                                                                    <td>
                                                                                        <a href="/home/deletePetition/?Id=@petition.PetitionId">
                                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash mr-50"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg>
                                                                                        </a>
                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </section>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a href="/home/userList" class="btn btn-primary float-right">Close</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Basic Vertical form layout section end -->
        </div>
    </div>
</div>
<!-- END: Content-->
