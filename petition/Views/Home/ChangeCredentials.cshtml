@{
    Layout = "_AdminLayout";
}
@model UserListVM
<div class="app-content content ml-0">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">

        <div class="content-body">
            <section id="navbar-component">
            </section>
            <section class="multiple-validation">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Change Email</h4>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <form class="form-horizontal" method="post" asp-action="UpdateEmail" asp-controller="account">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-addon-name">Current Email</label>
                                                    <div class="controls">
                                                        <input type="email" name="currentEmail" class="form-control" value="@Model.email" required data-validation-required-message="The email field is required" readonly>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-addon-name">New Email</label>
                                                    <div class="controls">
                                                        <input type="email" name="newEmail" class="form-control" placeholder="New Email" data-validation-required-message="The email field is required" required />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save Email Changes</button>
                                        <a href="/home/userList" class="btn btn-danger ml-1">Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Reset Password</h4>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <form class="form-horizontal" method="post" asp-action="ResetPassword" asp-controller="account">
                                        <input type="text" name="userId" value="@Model.userId" hidden>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-addon-name">New Password</label>
                                                    <div class="controls">
                                                        <input type="password" name="newPassword" min="6" class="form-control" id="user-password" placeholder="Password" data-validation-required-message="The New Password field is required" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label class="form-label" for="basic-addon-name">Confirm Password</label>
                                                    <div class="controls">
                                                        <input type="password" name="confirmPassword" min="6" class="form-control" id="user-confirm-password" data-validation-required-message="The Confirm Password field is required" placeholder="Confirm Password" required>
                                                        <p id="message"></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="submit" class="btn btn-primary" value="Save Password Changes" id="resetPassword" disabled/>
                                        <a href="/home/userList" class="btn btn-danger ml-1">Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('#user-confirm-password').on('keyup', function () {
            if ($('#user-password').val() == $('#user-confirm-password').val()) {
                $('#resetPassword').prop("disabled", false);
                $('#message').html('Password and Confirm Password Matching').css('color', 'green');
            } else {
                $('#resetPassword').prop("disabled", true);
                $('#message').html('* Password and Confirm Password Not Matching').css('color', 'red');
            }

        });
    </script>
}